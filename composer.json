{
	"name": "johnfmorton/login-lockdown",
	"description": "Prevents brute force password attacks on the Craft CMS control panel by tracking failed login attempts per IP address and blocking access after a configurable threshold.",
	"type": "craft-plugin",
	"version": "1.0.0",
	"keywords": [
		"craft",
		"cms",
		"craftcms",
		"craft-plugin",
		"brute force",
		"security",
		"login protection"
	],
	"support": {
		"docs": "https://github.com/johnfmorton/login-lockdown",
		"issues": "https://github.com/johnfmorton/login-lockdown/issues"
	},
	"license": "MIT",
	"authors": [
		{
			"name": "John F Morton",
			"homepage": "https://supergeekery.com"
		}
	],
	"require": {
		"php": ">=8.2",
		"craftcms/cms": "^5.8.0"
	},
	"autoload": {
		"psr-4": {
			"johnfmorton\\loginlockdown\\": "src/"
		}
	},
	"extra": {
		"name": "Login Lockdown",
		"handle": "login-lockdown",
		"developer": "John F Morton",
		"developerUrl": "https://supergeekery.com",
		"documentationUrl": "https://github.com/johnfmorton/login-lockdown",
		"class": "johnfmorton\\loginlockdown\\LoginLockdown"
	},
	"scripts": {
		"check-cs": "ecs check --ansi",
		"fix-cs": "ecs check --ansi --fix",
		"phpstan": "phpstan --memory-limit=1G"
	},
	"config": {
		"sort-packages": true,
		"platform": {
			"php": "8.2"
		},
		"allow-plugins": {
			"yiisoft/yii2-composer": true,
			"craftcms/plugin-installer": true
		}
	},
	"require-dev": {
		"craftcms/phpstan": "dev-main"
	}
}
